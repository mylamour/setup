# cat <<EOF > ~/.bashrc 
# export RED="tput setaf 1"
# export GREEN="tput setaf 2"
# export YELLOW="tput setaf 2"
# export NC="tput sgr0"
# EOF


echo "[Info]: Starting to modifie .bashrc"

sed -i '$ a export RED="tput setaf 1"' ~/.bashrc 
sed -i '$ a export GREEN="tput setaf 2"' ~/.bashrc 
sed -i '$ a export YELLOW="tput setaf 2"' ~/.bashrc 
sed -i '$ a export NC="tput sgr0"' ~/.bashrc 

source ~/.bashrc
echo "${GREEN}[Info]${NC}: Modified Successful"

# Install Building Essential and Basic Tools
echo "${YELLOW}[Info]${NC}: Starting to install essential"
sudo apt-get update >/dev/null 2>&1
sudo apt-get install -y build-essential sshpass curl tmux git unzip lynx pandoc python3 python3-pip python3-tqdm >/dev/null 2>&1
curl -s https://rclone.org/install.sh | sudo bash >/dev/null 2>&1
echo "${GREEN}[Info]${NC}: Installed Successful"

echo "${YELLOW}[Info]${NC}: Starting to config tmux"
git clone https://github.com/gpakosz/.tmux.git >/dev/null 2>&1
ln -s -f .tmux/.tmux.conf
cp .tmux/.tmux.conf.local .
echo "${GREEN}[Info]${NC}: Configured Successful"

echo "${YELLOW}[Info]${NC}: Starting to config sftp"

echo "${GREEN}[Info]${NC}: Configured Successful"

