#!/bin/bash

# RED='\e[91m'
# GREEN='\e[92m'
# YELLOW='\e[93m'
# NC='\e[0m'
# _red() { echo -e ${RED}$*${NC}; }
# _green() { echo -e ${GREEN}$*${NC}; }
